<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item state_pressed="true">
        <shape shape="rectangle">
            <solid color="#ffffff"/>
            <stroke width="2dp" color="#7631c1"/>
            <corners radius="4dp"/>
        </shape>
    </item>
    <item state_selected="true">
        <shape shape="rectangle">
            <solid color="#ffffff"/>
            <stroke width="2dp" color="#7631c1"/>
            <corners radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape shape="rectangle">
            <solid color="#ffffff"/>
            <stroke width="2dp" color="#f5f3f6"/>
            <corners radius="4dp"/>
        </shape>
    </item>
</selector>
