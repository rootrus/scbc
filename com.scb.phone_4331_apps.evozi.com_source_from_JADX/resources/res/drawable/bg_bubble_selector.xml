<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item state_selected="true">
        <shape shape="rectangle">
            <solid color="#7631c1"/>
            <corners radius="30dp"/>
            <stroke width="1dp" color="#7631c1"/>
        </shape>
    </item>
    <item state_selected="false">
        <shape shape="rectangle">
            <solid color="#ffffff"/>
            <corners radius="30dp"/>
            <stroke width="1dp" color="#7631c1"/>
        </shape>
    </item>
</selector>
