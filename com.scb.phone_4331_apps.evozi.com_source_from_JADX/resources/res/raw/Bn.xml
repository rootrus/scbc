<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:aapt="http://schemas.android.com/aapt" color="#4f2a81">
    <item id="@android:id/mask" drawable="@drawable/bg_button"/>
    <item>
        <selector>
            <item state_selected="true">
                <shape shape="rectangle">
                    <stroke width="1dp" color="#7631c1"/>
                    <corners radius="4dp"/>
                </shape>
            </item>
            <item state_enabled="false">
                <shape shape="rectangle">
                    <stroke width="1dp" color="#66c9c6cd"/>
                    <corners radius="4dp"/>
                </shape>
            </item>
            <item>
                <shape shape="rectangle">
                    <stroke width="1dp" color="#c9c6cd"/>
                    <corners radius="4dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
