<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" orientation="vertical" background="#ffffff" padding="8dp" layout_width="match_parent" layout_height="wrap_content" layout_margin="2dp" layout_weight="1">
    <LinearLayout orientation="vertical" layout_width="match_parent" layout_height="wrap_content" layout_weight="0.85">
        <ImageView layout_gravity="center" id="@+id/hml_document_image" visibility="gone" layout_width="100dp" layout_height="100dp" src="@drawable/ic_resubmission"/>
        <ImageView layout_gravity="center" id="@+id/hml_document_status_image" visibility="visible" layout_width="50dp" layout_height="50dp" layout_margin="8dp" scaleType="center"/>
        <TextView gravity="center" layout_gravity="center" id="@+id/hml_document_type" layout_width="match_parent" layout_height="wrap_content" style="@style/2131821011"/>
        <TextView gravity="center" layout_gravity="center" id="@+id/hml_document_details" padding="4dp" visibility="gone" layout_width="wrap_content" layout_height="wrap_content" style="@style/2131821008"/>
    </LinearLayout>
    <TextView gravity="center" layout_gravity="center" id="@+id/hml_document_number" layout_width="wrap_content" layout_height="wrap_content" layout_weight="0.15" style="@style/2131821060"/>
</LinearLayout>
