<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" orientation="vertical" background="#ffffff" paddingTop="4dp" paddingBottom="20dp" clickable="true" layout_width="match_parent" layout_height="wrap_content" paddingStart="4dp" paddingEnd="4dp">
    <RelativeLayout id="@+id/info_close_btn_relative_layout" clickable="true" layout_width="40dp" layout_height="40dp" layout_alignParentRight="true" layout_alignParentEnd="true">
